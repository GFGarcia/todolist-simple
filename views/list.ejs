<%- include('header'); -%>

<div class="box" id="heading">
  <h1>
    <%= listTitle %>
  </h1>
</div>

<div class="box">

  <% newListItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <input type="checkbox" name="checkbox" value="<%= item._id %>" onChange="this.form.submit()">
      <p>
        <%= item.name %>
      </p>
	  <!-- O tipo hidden serve para enviar dados no submit. Esse input não aparece para o usuário. -->
      <input type="hidden" name="listName" value="<%= listTitle %>"></input>
    </div>
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off" required autofocus />
    <!-- O nome do botão é a chave e value, o valor dela em req.body (ver app.js). Exemplo  list: work  -->
    <button type="submit" name="list" value="<%= listTitle %>">+</button>
  </form>

</div>

<%- include('footer'); -%>